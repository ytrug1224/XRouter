<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CompactTransparent" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Transparent_FullScreen" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="AppTheme.FUllScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="basedivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="basedivider_top_16" parent="basedivider">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="basedivider_bold" parent="basedivider">
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="basedivider_middle_light" parent="basedivider_bold">
        <item name="android:layout_height">8dp</item>
    </style>

</resources>
